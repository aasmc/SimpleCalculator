<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/numberFieldBackground"
            android:gravity="bottom|end"
            android:maxLength="12"
            android:padding="@dimen/extra_small_spacing"
            android:textColor="@color/numberColor"
            android:textSize="28sp"
            tools:text="123456789" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/seven_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/extra_extra_small_spacing"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:layout_marginEnd="@dimen/extra_extra_small_spacing"
                    android:layout_marginBottom="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onDigit"
                    android:text="7" />

                <Button
                    android:id="@+id/eight_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/extra_extra_small_spacing"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:layout_marginEnd="@dimen/extra_extra_small_spacing"
                    android:layout_marginBottom="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onDigit"
                    android:text="8" />

                <Button
                    android:id="@+id/nine_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/extra_extra_small_spacing"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:layout_marginEnd="@dimen/extra_extra_small_spacing"
                    android:layout_marginBottom="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onDigit"
                    android:text="9" />

                <Button
                    android:id="@+id/divide_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/extra_extra_small_spacing"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:layout_marginEnd="@dimen/extra_extra_small_spacing"
                    android:layout_marginBottom="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onOperator"
                    android:text="/" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/four_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onDigit"
                    android:text="4" />

                <Button
                    android:id="@+id/five_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onDigit"
                    android:text="5" />

                <Button
                    android:id="@+id/six_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onDigit"
                    android:text="6" />

                <Button
                    android:id="@+id/multiply_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onOperator"
                    android:text="*" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/one_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onDigit"
                    android:text="1" />

                <Button
                    android:id="@+id/two_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onDigit"
                    android:text="2" />

                <Button
                    android:id="@+id/three_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onDigit"
                    android:text="3" />

                <Button
                    android:id="@+id/minus_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onOperator"
                    android:text="-" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dot_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onDecimalPoint"
                    android:text="."
                    />

                <Button
                    android:id="@+id/zero_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onDigit"
                    android:text="0" />


                <Button
                    android:id="@+id/clear_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="clr"
                    android:onClick="onClear"/>

                <Button
                    android:id="@+id/plus_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onOperator"
                    android:text="+" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/equals_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_extra_small_spacing"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="="
                    android:onClick="onEqual"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>